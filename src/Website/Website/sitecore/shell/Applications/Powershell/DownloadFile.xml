<?xml version="1.0" encoding="utf-8"?>

<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <DownloadFile>
    <FormPage Background="threedface">
      <CodeBeside Type="Cognifide.PowerShell.SitecoreIntegrations.Applications.DownloadFile,Cognifide.PowerShell" />
      <Edit ID="Hidden" ReadOnly="true" Style="display: none" />

      <GridPanel Width="100%" Height="100%">
        <GridPanel Columns="2" Width="100%" GridPanel.Height="100%" GridPanel.Valign="top">

          <ThemedImage Src="Applications/32x32/disk_blue.png" Width="32" Height="32" Margin="8px 0px 8px 16px"
                       GridPanel.Valign="top" />

          <Border Padding="8px 16px 8px 8px" GridPanel.Width="100%">
            <Literal ID="Text" />
            <GridPanel Columns="2" Width="100%" GridPanel.Height="100%" GridPanel.Valign="top">
              <GridPanel Columns="2" Width="100%" GridPanel.Height="100%" GridPanel.Valign="top">
                <Border Padding="8px 8px 0px 8px">
                  <Literal Text="Path:" style="font-weight:bold;"/>
                </Border>
                <Border Padding="8px 8px 0px 0px">
                  <Literal ID="FileNameLabel" />
                </Border>
                <Border Padding="2px 8px 0px 8px">
                  <Literal Text="Size:" style="font-weight:bold;"/>
                </Border>
                <Border Padding="2px 8px 0px 0px">
                  <Literal ID="SizeLabel" />
                </Border>
                <Border Padding="2px 8px 0px 8px">
                  <Literal ID="DownloadLabel" />
                </Border>
                <Border Padding="2px 8px 0px 0px" Align="Right">
<!--
                  <Button Click="Download" Header="Download" Margin="0px 4px 0px 0px"/>
-->
                </Border>
              </GridPanel>
            </GridPanel>                
          </Border>
        </GridPanel>

        <Border Align="right" Padding="16px 8px 8px 8px">
          <Button Click="Download" Header="Download" Margin="0px 4px 0px 0px"/>
          <Button Click="Close" Header="Close" Margin="0px 4px 0px 0px"/>
        </Border>
      </GridPanel>

    </FormPage>
  </DownloadFile>
</control>